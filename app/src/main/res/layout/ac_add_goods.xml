<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".ui.AddGoodsAc">

    <com.hiy.soda.component.SodaEditLayout
        android:id="@+id/name_etl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.hiy.soda.component.SodaTextLayout
        android:id="@+id/time_tvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.hiy.soda.component.SodaGalleryLayout
        android:id="@+id/image_gl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>